{
	"name": "reddit-view",
	"displayName": "Reddit View",
	"description": "Browse Reddit in VS Code",
	"publisher": "ekarbe",
	"version": "2.0.1",
	"icon": "static/RedditView_icon.png",
	"repository": "https://github.com/ekarbe/reddit-view",
	"galleryBanner.color": "#EE4848",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:redditview.start"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "Reddit View",
			"properties": {
				"redditview.title": {
					"type": "string",
					"default": "Reddit",
					"description": "Set the title of the 'Reddit View' window"
				},
				"redditview.defaultSort": {
					"type": "array",
					"default": [
						"hot",
						null
					],
					"description": "Set the default sorting of a subreddit. Scheme: [ sorting, time ]"
				},
				"redditview.defaultSubreddit": {
					"type": "string",
					"default": "all",
					"description": "Set the default subreddit"
				},
				"redditview.help": {
					"type": "boolean",
					"default": true,
					"description": "Define if the help field should be shown"
				},
				"redditview.landingPage": {
					"type": "boolean",
					"default": true,
					"description": "Define if the landing page should be shown"
				}
			}
		},
		"commands": [
			{
				"command": "redditview.start",
				"title": "Reddit"
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.8",
		"eslint": "^5.16.0",
		"typescript": "^3.5.1",
		"vscode": "^1.1.34"
	},
	"dependencies": {
		"node-fetch": "^2.6.0"
	}
}
